rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function incomingData() {
      return request.resource.data;
    }

    // Match users collection
    match /users/{userId} {
      // Allow read if user is authenticated
      allow read: if isAuthenticated();
      
      // Allow create if:
      // 1. User is authenticated
      // 2. The document ID matches their auth ID
      // 3. They're only setting allowed fields
      allow create: if isAuthenticated() 
        && isOwner(userId)
        && incomingData().keys().hasOnly(['role', 'email', 'createdAt', 'updatedAt'])
        && incomingData().role == 'student';
      
      // Allow update with similar restrictions
      allow update: if isAuthenticated() 
        && isOwner(userId)
        && incomingData().role == 'student';
    }
  }
}
